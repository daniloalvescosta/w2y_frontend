<div class="p-5" id="login-form">
  <%= image_tag 'w2y.png', alt: 'W2Y Logo', class: "rounded mx-auto d-block", id: "logo" %>

  <div>
    <%= form_with url: form_url, method: form_method, local: true, html: { class: 'form-horizontal' } do |form| %>
      <div class="form-group">
        <div class="col-sm-20">
          <%= form.email_field :email, class: 'form-control', placeholder: 'Email' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-20">
          <%= form.password_field :password, class: 'form-control', placeholder: 'Password' %>
        </div>
      </div>

      <% if link_url == new_session_path %>
        <div class="form-group">
          <div class="col-sm-20">
            <%= form.password_field :password_confirmation, class: 'form-control', placeholder: 'Password Confirmation' %>
          </div>
        </div>
      <% end %>

      <div class="form-group">
        <br>
        <div class="col-sm-offset-2 col-sm-20">
          <%= form.submit submit_text, class: 'btn btn-primary mx-auto d-block' %>
        </div>
      </div>
    <% end %>

    <div class="text-center mt-4">
      <%= link_to link_text, link_url, class: 'btn btn-link' %>
    </div>
  </div>
</div>
